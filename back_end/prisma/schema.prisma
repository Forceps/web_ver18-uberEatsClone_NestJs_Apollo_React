generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model restaurant {
  restaurant_id Int    @id @default(autoincrement())
  name          String
  isVegan       Int?
  address       String
  ownerName     String
  categoryName  String
}

model user {
  id        Int       @id @default(autoincrement())
  createdAt DateTime
  updateAt  DateTime
  email     String    @unique
  password  String
  role      user_role @default(client)
}

enum user_role {
  client
  owner
  delivery
}
