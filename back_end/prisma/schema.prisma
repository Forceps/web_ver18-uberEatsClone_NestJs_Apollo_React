generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model restaurant {
  restaurant_id Int    @id @default(autoincrement())
  name          String
  isVegan       Int?
  address       String
  ownerName     String
  categoryName  String
}

model user {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime?
  updatedAt    DateTime?
  email        String        @unique
  verified     Int           @default(0)
  password     String
  role         user_role     @default(client)
  verification verification?
}

model verification {
  id        Int       @id @default(autoincrement())
  createdAt DateTime?
  updatedAt DateTime?
  code      String
  userId    Int       @unique
  user      user      @relation(fields: [userId], references: [id])
}

enum user_role {
  client
  owner
  delivery
}
